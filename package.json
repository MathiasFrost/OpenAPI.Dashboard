{
	"name": "openapi-dashboard",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "env-cmd -e root,dev vite dev",
		"build": "env-cmd -e root,prod vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"lint:css": "stylelint **/*.{css,scss,html,svelte,svg}",
		"checkall": "pnpm run format && pnpm run lint && pnpm run lint:css && pnpm run check"
	},
	"devDependencies": {
		"@maal/svelte-stores-plus": "^0.1.2",
		"@sveltejs/adapter-static": "^1.0.5",
		"@sveltejs/kit": "^1.3.2",
		"@typescript-eslint/eslint-plugin": "^5.49.0",
		"@typescript-eslint/parser": "^5.49.0",
		"env-cmd": "^10.1.0",
		"eslint": "^8.32.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"postcss": "^8.4.21",
		"postcss-html": "^1.5.0",
		"prettier": "^2.8.3",
		"prettier-plugin-svelte": "^2.9.0",
		"sass": "^1.57.1",
		"stylelint": "^14.16.1",
		"stylelint-config-html": "^1.1.0",
		"stylelint-config-prettier-scss": "^0.0.1",
		"stylelint-config-standard-scss": "^5.0.0",
		"svelte": "^3.55.1",
		"svelte-check": "^2.10.3",
		"svelte-preprocess": "^4.10.7",
		"tslib": "^2.5.0",
		"typescript": "^4.9.4",
		"vite": "^4.0.4"
	},
	"type": "module"
}
