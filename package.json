{
	"name": "openapi-dashboard",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "env-cmd -e development vite dev",
		"build": "env-cmd -e release vite dev",
		"preview": "vite preview",
		"test": "npm run test:integration && npm run test:unit",
		"check": "env-cmd -e development svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"inspect": "npm run check && npm run lint",
		"test:integration": "playwright test",
		"test:unit": "vitest"
	},
	"devDependencies": {
		"@maal/svelte-data": "^0.4.7",
		"@playwright/test": "^1.40.1",
		"@sveltejs/adapter-static": "^3.0.1",
		"@sveltejs/kit": "^2.0.6",
		"@types/node": "^20.10.5",
		"@typescript-eslint/eslint-plugin": "^6.15.0",
		"@typescript-eslint/parser": "^6.15.0",
		"env-cmd": "^10.1.0",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"sass": "^1.69.5",
		"sqlite": "^5.1.1",
		"sqlite3": "^5.1.6",
		"svelte": "^4.2.8",
		"svelte-check": "^3.6.2",
		"svelte-preprocess": "^5.1.3",
		"tslib": "^2.6.2",
		"typescript": "^5.3.3",
		"vite": "^5.0.10",
		"vitest": "^1.1.0"
	},
	"type": "module"
}
